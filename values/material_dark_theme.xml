<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="material_theme">
        <item name="android:background">@drawable/dark_material_theme</item>
    </style>

    <style name="textStyleMaterial">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">46sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingBottom">25dp</item>
    </style>

    <style name="startButtonStyleMaterial">
        <item name="android:background">@drawable/material_start_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="pauseButtonStyleMaterial">
        <item name="android:background">@drawable/material_pause_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="stopButtonStyleMaterial">
        <item name="android:background">@drawable/material_stop_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="pointImageStyleMaterial">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pointTextStyleMaterial">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toEndOf">@+id/imageView</item>
        <item name="android:layout_toRightOf">@+id/imageView</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>